{
	"name": "Search GEAR",
	"description": "Search google with enhanced auto-loading results",
	"version": "1.5",
	"permissions": [
        "*://*.google.com/search?*q=*"
    ],
    "content_scripts": [
        {
            "matches": [ "*://*.google.com/search?*q=*" ],
            "js": ["gear-autoload.js", "gear-infinitescroll.js"],
            "css": ["gear-ui.css"]

        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

	"icons": {
		"64": "icon.png"
	},
	"manifest_version": 2
}
