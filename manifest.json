{
	"name": "Search GEAR",
	"description": "Search google with enhanced auto-loading results",
	"version": "1.5",
	"permissions": [
        "*://*.google.com/search?*q=*",
        "*://*/*",
        "webRequest", "webRequestBlocking", 
        "webNavigation",
        "storage" 
    ],
    "content_scripts": [
        {
            "matches": [ "*://*.google.com/search?*q=*"],
            "js": ["gear-autoload.js", "gear-infinitescroll.js"],
            "css": ["gear-ui.css", "uiToggle.css"],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

	"icons": {
		"64": "icon.png"
	},
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
      },
	"manifest_version": 2
}
